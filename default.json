{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Europe/Warsaw",
  "extends": ["config:base", ":disableDependencyDashboard"],
  "schedule": [
    "before 5am on Monday"
  ],
  "packageRules": [
    {
      "groupName": "all minor dependency bump",
      "groupSlug": "all-minor",
      "matchPackageNames": ["*"],
      "matchUpdateTypes": ["minor"]
    },
    {
      "groupName": "all non-major dependency bump",
      "groupSlug": "all-patch",
      "matchPackageNames": ["*"],
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "groupName": "FRSOURCE tooling configuration",
      "groupSlug": "frsource-configs",
      "matchPackageNames": ["@frsource/*-config"],
      "automerge": true
    },
    {
      "extends": "packages:linters",
      "groupName": "linters",
      "matchPackageNames": [
        "@frsource/eslint-config",
        "@frsource/prettier-config"
      ],
      "automerge": true
    },
    {
      "extends": "packages:postcss",
      "groupName": "postcss packages"
    },
    {
      "groupName": "vueuse",
      "matchPackageNames": [
        "@vueuse/**"
      ]
    },
    {
      "extends": "packages:test",
      "groupName": "test packages",
      "automerge": true
    },
    {
      "groupName": "vitest packages",
      "matchPackageNames": [
        "@vitest/**",
        "vitest",
        "globals-vitest"
      ],
      "automerge": true
    },
    {
      "groupName": "definitelyTyped",
      "matchPackageNames": ["@types/**"],
      "automerge": true
    }
  ]
}
